<div class="mt-4">
    <h3>Courses</h3>
        <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
            <div class="mb-3">
                <label for="description" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" aria-describedby="emailHelp" value="{{course.name}}" name="name">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" class="form-control" id="description" aria-describedby="emailHelp" value="" name="description">{{course.description}}</textarea>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">VideoId</label>
                <input type="text" class="form-control" id="videoId" aria-describedby="emailHelp" value="{{course.videoId}}" name="videoId">
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>